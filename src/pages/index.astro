---
import Layout from "../layouts/Layout.astro";
import SocialNetwork from "../components/SocialNetwork.astro";
// import Badge from "../components/Badge.astro";
import Experience from "../components/Experience";
import Education from "../components/Education.astro";
import SectionContainer from "../components/SectionContainer.astro";
import Stack from "../components/Stack.astro";

import GitHubIcon from "../icons/GitHub.astro";
import GitLabIcon from "../icons/GitLab.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import GmailIcon from "../icons/Gmail.astro";
import BriefCaseIcon from "../icons/BriefCase.astro";
import EducationIcon from "../icons/Education.astro";
import UserIcon from "../icons/User.astro";

import { Image } from "astro:assets";
---

<Layout title="Portfolio - Marco Baltazar">
	<main class="px-4">
		<SectionContainer id="home" class="lg:pt-44 lg:pb-14 pt-20 pb-4">
			<picture>
				<Image
					src="https://avatars.githubusercontent.com/u/158519820?s=400&u=3600dbffa81b44fc57d7e7e29a156e21da029c69&v=4"
					alt="user portfolio"
					width="50"
					height="50"
					class="rounded-full"
					loading={"eager"}
				/>
			</picture>
			<h1
				class="text-white text-2xl md:text-3xl lg:text-4xl font-bold flex flex-row gap-x-4 lg:py-2 py-1"
			>
				Hey, I'm Marco Baltazar
			</h1>
			<div class="flex gap-10">
				<span class="text-personal-info">mabsbaltazar@gmail.com</span><span
					class="text-personal-info">+591 60717546</span
				>
			</div>
			<h2
				class="text-xl lg:text-2xl max-w-[700px] text-white/90 text-wrap lg:text-pretty"
			>
				Software Engineer who loves <span class="text-[#3faef2] font-semibold"
					>Frontend Development</span
				>, +4 years of experience working on Outsourcing projects.
			</h2>
			<nav class="flex justify-center gap-x-2 p-8">
				<SocialNetwork
					href="https://www.linkedin.com/in/marco-antonio-baltazar-santos/"
					networkName="linkedin"
				>
					<LinkedInIcon class="size-6" />
				</SocialNetwork>
				<SocialNetwork href="https://github.com/polacodev" networkName="github">
					<GitHubIcon class="size-6" />
				</SocialNetwork>
				<SocialNetwork
					href="https://gitlab.com/mabsbaltazar"
					networkName="gitlab"
				>
					<GitLabIcon class="size-6" />
				</SocialNetwork>
				<!-- <SocialNetwork
					href="https://www.linkedin.com/in/marco-antonio/"
					networkName="gmail"
				>
					<GmailIcon class="size-6" />
				</SocialNetwork> -->
			</nav>
		</SectionContainer>

		<SectionContainer id="experience">
			<h2
				class="text-2xl font-semibold mb-6 flex gap-x-3 items-center opacity-80"
			>
				<BriefCaseIcon class="size-7" />
				Experience
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="education">
			<h2
				class="text-2xl font-semibold mb-6 flex gap-x-3 items-center opacity-80"
			>
				<EducationIcon class="size-7" />
				Education
			</h2>
			<Education />
		</SectionContainer>

		<SectionContainer id="about-me">
			<h2
				class="text-2xl font-semibold mb-6 flex gap-x-3 items-center opacity-80"
			>
				<UserIcon class="size-7" />
				About me
			</h2>
			<p class="text-pretty ml-2 opacity-80">
				I studied Systems Engineering at the Universidad Mayor de San Sim√≥n, I
				have been working with javascript, typescript, react in frontend and
				graphql, nodejs, c# in backend as well as react native for mobile
				development, I have +4 years of experience developing commercial
				software, attentive to the quality of work at each stage of the
				development life cycle from design, implementation of functionality,
				debugging, testing and maintenance. I'm interested on backend frontend
				development and learning new technologies.
			</p>
			<Stack />
		</SectionContainer>
	</main>
</Layout>

<style>
	.text-personal-info {
		@apply text-sm font-light text-white/50 italic hover:not-italic;
	}
</style>
