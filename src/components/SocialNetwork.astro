---
interface Props {
	href: string;
	networkName: string;
}

const { href, networkName } = Astro.props;
---

<div class="flex flex-col items-center">
	<a
		href={href}
		class="px-5 hover:scale-110"
		target="_blank"
		aria-label={networkName}
	>
		<slot />
	</a>
	<p class="text-sm text-white/75">{networkName}</p>
</div>
